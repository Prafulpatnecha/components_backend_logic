âœ… Safe Alternative: addPostFrameCallback
// Agar aapko context ka use karna hi hai initState() ke baad, toh aap is tarah kar sakte ho:

@override
void initState() {
  super.initState();

  WidgetsBinding.instance.addPostFrameCallback((_) {
    // Ab context safe hai
    final args = ModalRoute.of(context)?.settings.arguments;
    print(args);
  });
}

// ğŸ”´ Unsafe (Don't do this):
@override
void initState() {
  super.initState();

  // âŒ Direct context use â€” risky
  final args = ModalRoute.of(context)?.settings.arguments; // Can throw error
}
